							"",
							"pm.test(\"Response contains user notifications\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('status', 'success');",
							"    pm.expect(jsonData.message).to.include('notifications for user');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/notifications/user/{{userId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
