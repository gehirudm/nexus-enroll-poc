	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set dynamic timestamp for requests",
					"pm.globals.set(\"timestamp\", new Date().toISOString());"
				]
			}
		}
	],
	"variable": [
