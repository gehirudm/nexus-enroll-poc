	"item": [
		{
			"name": "Get Faculty by ID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response contains faculty information\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('status', 'success');",
							"    pm.expect(jsonData.message).to.include('faculty');",
							"});",
							"",
							"pm.test(\"Response time is acceptable\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/faculty/{{facultyId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"faculty",
						"{{facultyId}}"
					]
				}
			}
		},
